<!DOCTYPE html>
<html lang="en">

<%- include("../partials/head.ejs") %>

<body>
    <%- include("../partials/nav.ejs") %>
    <div class="container-fluid">
        <h1><%= collection.name %></h1>
            <div class="row row-cols-3">
                <% collection.pieces.forEach((piece) => { %>
                <div class="col">
                    <h2><%= piece.name %></h2>
                    <a href="/collections/<%= collection._id %>/<%= piece._id %>/show"><img class="pieceImg" src="<%= piece.img %>"></a><br />           
                    <form action="/collections/<%= collection._id %>/<%= piece._id %>?_method=DELETE" method="POST">
                        <input class="button" type="submit" value="DELETE Piece">
                    </form>
                    <% }); %>
                </div>
            </div>
            <a href="/collections/<%= collection._id %>/new"><button>Add a New Piece</button></a>
    </div>
</body>
</html>